#include<stdio.h>

int main(){
    int N,i;
    int flag =1;
    printf("enter the number= ");
    scanf("%d", &N);
    if(N == 0 || N ==1);
    printf("the number is not prime: ");
    scanf("%d", &N);
    
    for(i=2;i < N/2;i++){
        if(N%i==0){
            flag =0;
            break;
        }
    }
    if (flag) { 
		printf("The number %d is a Prime Number\n", N); 
	} 
	else { 
		printf("The number %d is not a Prime Number\n", N); 
	} 

	return 0; 
} 

